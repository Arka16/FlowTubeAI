{
  "manifest_version": 3,
  "name": "Flow tube AI",
  "version": "1.0",
  "description": "Filter out distracting youtube videos with AI",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:5001/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Flow tube AI"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content/content.js"]
    }
  ]
}
